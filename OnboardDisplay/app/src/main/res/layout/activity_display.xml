    <ImageView
        android:id="@+id/iv_master_warning"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/master_warning_grey"/>


    <ImageView
        android:id="@+id/iv_seatbelt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/iv_master_warning"
        android:src="@drawable/seatbelt_warning_grey" />

    <ImageView
        android:id="@+id/iv_lights_fault"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/iv_seatbelt"
        android:src="@drawable/lights_fault_grey" />

    <ImageView
        android:id="@+id/iv_low_wiper_fluid"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/iv_lights_fault"
        android:src="@drawable/low_wiper_fluid_grey" />

    <ImageView
        android:id="@+id/iv_low_tire_pressure"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/iv_low_wiper_fluid"
        android:src="@drawable/low_tire_pressure_grey" />

    <ImageView
        android:id="@+id/iv_air_bag_fault"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/iv_low_tire_pressure"
        android:src="@drawable/airbag_fault_grey" />

    <ImageView
        android:id="@+id/iv_brakes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/iv_air_bag_fault"
        android:src="@drawable/handbrake_warning_grey" />

    <ImageView
        android:id="@+id/iv_abs"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/iv_brakes"
        android:src="@drawable/abs_fault_grey" />

    <ImageView
        android:id="@+id/iv_motor"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/iv_abs"
        android:src="@drawable/electric_drive_system_fault_grey" />

    <ImageView
        android:id="@+id/iv_handbrake"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/iv_battery_temp"
        android:src="@drawable/parking_brake_grey" />

    <ImageView
        android:id="@+id/iv_battery_temp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/iv_motor"
        android:src="@drawable/temp_grey" />

    <ImageView
        android:id="@+id/iv_light_intensity"
        android:layout_alignParentTop="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/iv_handbrake"
        android:src="@drawable/no_lightbeam_grey" />

    <TextView
        android:id="@+id/txt_distance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/iv_gauge_battery"
        android:layout_toEndOf="@+id/iv_gauge_speed"
        android:text="Distance"
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/txt_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_distance_title"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/iv_gauge_battery"
        android:layout_toEndOf="@+id/iv_gauge_speed"
        android:text="0"
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/txt_battery_range_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_distance"
        android:layout_marginStart="5dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/iv_gauge_battery"
        android:layout_toEndOf="@+id/iv_gauge_speed"
        android:text="Range"
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/txt_battery_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_battery_range_title"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/iv_gauge_battery"
        android:layout_toEndOf="@+id/iv_gauge_speed"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textAlignment="center"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_charging"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_retry_connection"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/charging_icon_grey" />

    <TextView
        android:id="@+id/text_connected"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="fill_horizontal"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-light"
        android:text="Connecting..."
        android:textAlignment="center"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_retry_connection"
        android:text="Retry Connection"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_below="@+id/text_connected"
        android:layout_alignParentEnd="true"
        android:fontFamily="sans-serif-light"
        android:textAllCaps="false"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:textSize="12dp"/>

    <ImageView
        android:id="@+id/iv_gauge_speed"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/gauge_new_speed" />

    <ImageView
        android:id="@+id/iv_needle_speed"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/iv_gauge_speed"
        android:layout_alignTop="@+id/iv_gauge_speed"
        android:layout_alignEnd="@+id/iv_gauge_speed"
        android:layout_alignBottom="@+id/iv_gauge_speed"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="182dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/needle"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/iv_gauge_battery"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/gauge_new_battery" />

    <ImageView
        android:id="@+id/iv_needle_battery"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/iv_gauge_battery"
        android:layout_alignTop="@+id/iv_gauge_battery"
        android:layout_alignEnd="@+id/iv_gauge_battery"
        android:layout_alignBottom="@+id/iv_gauge_battery"
        android:layout_marginStart="150dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/needle"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/img_indicator_right"
        android:layout_width="116dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="500dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:animateLayoutChanges="true"
        android:src="@drawable/right_indicator_green"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/img_indicator_left"
        android:layout_width="116dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="500dp"
        android:layout_marginBottom="20dp"
        android:animateLayoutChanges="true"
        android:src="@drawable/left_indicator_green"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/img_indicator_right_grey"
        android:layout_width="116dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="500dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:animateLayoutChanges="true"
        android:src="@drawable/right_indicator_grey" />

    <ImageView
        android:id="@+id/img_indicator_left_grey"
        android:layout_width="116dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="500dp"
        android:layout_marginBottom="20dp"
        android:animateLayoutChanges="true"
        android:src="@drawable/left_indicator_grey" />

    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_gauge_speed"
        android:layout_alignTop="@+id/iv_gauge_speed"
        android:layout_alignBottom="@+id/iv_gauge_speed"
        android:layout_marginStart="110dp"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/tv_speed"
        android:layout_alignBottom="@+id/tv_speed"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/tv_speed"
        android:fontFamily="sans-serif-light"
        android:text="mph"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_gauge_battery"
        android:layout_alignTop="@+id/iv_gauge_battery"
        android:layout_alignBottom="@+id/iv_gauge_battery"
        android:layout_marginStart="110dp"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/tv_battery"
        android:layout_alignBottom="@+id/tv_battery"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/tv_battery"
        android:fontFamily="sans-serif-light"
        android:text="%"
        android:textAlignment="center"
        android:textSize="25sp" />
</RelativeLayout>