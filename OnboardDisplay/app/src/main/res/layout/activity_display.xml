<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="699dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="fill_horizontal"
        android:fontFamily="sans-serif-light"
        android:text="Onboard Display"
        android:textAlignment="center"
        android:textSize="40sp"
        android:onClick="onRetryClick"
        android:layout_marginStart="180dp"
        android:layout_marginEnd="180dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/text_connected"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="fill_horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-light"
        android:text="Connecting..."
        android:textAlignment="center"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_retry_connection"
        android:text="Retry Connection"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_below="@+id/text_connected"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-light"
        android:textAllCaps="false"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:textSize="12dp"/>

    <ImageView
        android:id="@+id/iv_gauge_speed"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/gauge_new_speed" />

    <ImageView
        android:id="@+id/iv_needle_speed"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/iv_gauge_speed"
        android:layout_alignTop="@+id/iv_gauge_speed"
        android:layout_alignEnd="@+id/iv_gauge_speed"
        android:layout_alignBottom="@+id/iv_gauge_speed"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="182dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/needle"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/iv_gauge_battery"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/gauge_new_battery" />

    <ImageView
        android:id="@+id/iv_needle_battery"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/iv_gauge_battery"
        android:layout_alignTop="@+id/iv_gauge_battery"
        android:layout_alignEnd="@+id/iv_gauge_battery"
        android:layout_alignBottom="@+id/iv_gauge_battery"
        android:layout_marginStart="150dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/needle"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/img_indicator_right"
        android:layout_width="116dp"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="500dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:animateLayoutChanges="true"
        android:src="@drawable/right_indicator"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/img_indicator_left"
        android:layout_width="116dp"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="500dp"
        android:layout_marginBottom="10dp"
        android:animateLayoutChanges="true"
        android:src="@drawable/left_indicator"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_gauge_speed"
        android:layout_alignTop="@+id/iv_gauge_speed"
        android:layout_alignEnd="@+id/iv_gauge_speed"
        android:layout_alignBottom="@+id/iv_gauge_speed"
        android:layout_marginStart="80dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textAlignment="center"
        android:textSize="40sp"/>

    <TextView
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/tv_speed"
        android:layout_alignTop="@+id/tv_speed"
        android:layout_alignEnd="@+id/tv_speed"
        android:layout_alignBottom="@+id/tv_speed"
        android:layout_marginStart="140dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-43dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="sans-serif-light"
        android:text="mph"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_gauge_battery"
        android:layout_alignTop="@+id/iv_gauge_battery"
        android:layout_alignEnd="@+id/iv_gauge_battery"
        android:layout_alignBottom="@+id/iv_gauge_battery"
        android:layout_marginStart="80dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textAlignment="center"
        android:textSize="40sp"/>

    <TextView
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/tv_battery"
        android:layout_alignTop="@+id/tv_battery"
        android:layout_alignEnd="@+id/tv_battery"
        android:layout_alignBottom="@+id/tv_battery"
        android:layout_marginStart="140dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-43dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="sans-serif-light"
        android:text="%"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/iv_gauge_battery"
        android:layout_toEndOf="@+id/iv_gauge_speed"
        android:textAlignment="center"
        android:textSize="30sp"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/tv_lights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_distance"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/iv_gauge_battery"
        android:layout_toEndOf="@+id/iv_gauge_speed"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:textSize="30sp" />
</RelativeLayout>